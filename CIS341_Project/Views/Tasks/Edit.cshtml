@model CIS341_Project.Models.DTO.TaskDTO

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskID" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrequencyDescription" class="control-label"></label>
                    <select asp-for="FrequencyDescription" class="form-control" asp-items="ViewBag.FrequencyDescription"></select>
                    <span asp-validation-for="FrequencyDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskTypeDescription" class="control-label"></label>
                    <select asp-for="TaskTypeDescription" class="form-control" asp-items="ViewBag.TaskTypeDescription"></select>
                    <span asp-validation-for="TaskTypeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkloadDescription" class="control-label"></label>
                    <select asp-for="WorkloadDescription" class="form-control" asp-items="ViewBag.WorkloadDescription"></select>
                    <span asp-validation-for="WorkloadDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
